    },
    "devDependencies": {
        "aws-cdk": "2.81.0",
        "husky": "^8.0.3",
        "prettier": "^2.8.8"
    },
    "dependencies": {
        "aws-cdk-lib": "2.81.0",
        "constructs": "^10.0.0"
    }
}
