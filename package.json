{
    "name": "base-infra",
    "version": "0.1.0",
    "type": "module",
    "bin": {
        "base-infra": "bin/base-infra.js"
    },
    "scripts": {
        "build": "echo \"The build step is not required when using JavaScript!\" && exit 0",
